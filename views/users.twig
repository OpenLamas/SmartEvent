{% set cur_page = 'users' %}
{% extends 'body.twig' %}
{% block content %}
{% if cur_user.right == "admin" %}
<div class="span9">
  <ul class="nav nav-tabs" id="myTab">
    <li class="active"><a data-toggle="tab" href="#utilisateurs">Utilisateurs</a></li>
    {# <li><a data-toogle="tab" href="#groupes">Groupes</a></li> #}
  </ul>
 
  <div class="tab-content">
    <div class="tab-pane active" id="utilisateurs">
      <form method="POST" action="#">
        <a class="btn btn-primary" href="#">Ajouter</a>
        <a class="btn btn-warning" href="#">Modifier</a>
        <a class="btn btn-danger" href="#">Supprimer</a>
        <ul class="listTags">
          <li class="tag">A1 <i class=" icon-remove closeTag"></i></li>
          <li class="tag">12 <i class=" icon-remove closeTag"></i></li>
          <input type="text" placeholder="ex A1 C2"/>
        </ul>
        <table class="table table-condensed">
          <thead>
            <tr>
              <th><label class="checkbox inline"><input type="checkbox" id="checkboxAll"></label></th>
              <th>Nom</th>
              <th>Prenom</th>
              <th>Login</th>
              <th>Courriel</th>
              <th>Droit</th>
            </tr>
          </thead>
          <tbody>          
            {% for user in users %}
            <tr id="user-{{ user.id }}">
              <td><label class="checkbox inline"><input type="checkbox"/></label></td>
              <td>{{ user.firstname }}</td>
              <td>{{ user.lastname }}</td>
              <td>{{ user.login }}</td>
              <td>{{ user.mail }}</td>
              <td>{{ user.right }}</td>
            </tr>
            {% endfor %}          
          </tbody>
        </table>
      </form>
    </div>
    
    {# <div class="tab-pane" id="groupes">      
      <form method="POST" action="#">
        <a class="btn btn-primary" href="#">Ajouter</a>
        <a class="btn btn-warning" href="#">Modifier</a>
        <a class="btn btn-danger" href="#">Supprimer</a>
        <table class="table table-condensed">
          <thead>
            <tr>
              <th><label class="checkbox inline"><input type="checkbox" id="checkboxAll"></label></th>
              <th>Nom</th>
            </tr>
          </thead>
          <tbody>          
            {% for group in groups %}
            <tr id="group-{{ group.id }}">
              <td><label class="checkbox inline"><input type="checkbox"/></label></td>
              <td>{{ group.name }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </form>
    </div> #}
  </div>
</div>
{% endif %}
{% endblock %}

{% set cur_page = 'users' %}
{% extends 'body.twig' %}
{% block content %}
{% if cur_user.right == "ADMIN" %}
<div class="row">
  <div class="span9 offset1">
    <div id="utilisateurs">
    <form method="POST" action="#" id="utilisateurs">
     <!-- <a class="btn btn-primary" href="#"><i class="icon-plus-sign icon-white"></i> Ajouter un utilisateur</a>   
      --><a class="btn btn-info" data-toggle="modal" href="#promoteModal"><i class="icon-certificate icon-white"></i> Promouvoir</a>   
      <a class="btn btn-danger" href="#"><i class="icon-remove-sign icon-white"></i> Supprimer</a><br /><br />
      {# <ul class="listTags">
        <li class="tag">A1 <i class=" icon-remove closeTag"></i></li>
        <li class="tag">12 <i class=" icon-remove closeTag"></i></li>
        <input type="text" placeholder="ex A1 C2"/>
      </ul> #}
      <table class="table table-condensed well">
        <thead>
          <tr>
            <th><label class="checkbox inline"><input type="checkbox" id="checkboxAll"></label></th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Courriel</th>
            <th>Droit</th>
            <th>Participation</th>
          </tr>
        </thead>
        <tbody>          
          {% for user in users %}
          <tr id="user-{{ user.idutilisateur }}">
            <td><label class="checkbox inline"><input type="checkbox"/></label></td>
            <td>{{ user.nomutilisateur }}</td>
            <td>{{ user.prenomutilisateur }}</td>
            <td>{{ user.mailutilisateur }}</td>
            <td>{{ user.right }}</td>
            <td><a href="events-participation">Voir &raquo;</a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{# MODAL PROMOTE ***************************************************************** #}
<div class="modal fade" id="promoteModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Promouvoir des utilisateurs</h3>
  </div>
  <div class="modal-body">
    <form class="form-horizontal" method="POST" action="#">
      <div class="control-group">
        <label class="control-label" for="input_newRight">Nouveau droit</label>
        <div class="controls">
          <select id="input_newRight">
            <option value="1">Utilisateur</option>
            <option value="2">Gestionnaire</option>
            <option value="3">Administrateur</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Annuler</a>
        <a href="users-promote" class="btn btn-primary disabled">Promouvoir</a>
      </div>
    </form>    
  </div>
</div>
{# MODAL PARTICIPATION **************************************************** #}
<div class="modal fade" id="participationModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>PARTICIPATION</h3>
  </div>
  <div class="modal-body">
    <table class="table table-condensed">
    <thead>
      <tr>
        <th>Nom de l'évènement</th>
        <th>Date de l'évènement</th>
        <th>Session</th>
      </tr>
    </thead>
    <tbody>
    </tbody>  
    </table>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Fermer</a>
  </div>
</div>
{# FIN MODAL ************************************************************** #}
{% endif %}
{% endblock %}

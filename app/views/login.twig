{% extends 'body.twig' %}
    
{% block content %}
<div class="row">
  {% if state|length > 0 %}
    {% if state == 'wrong' %}
    <div class="alert alert-error span4 offset4">Email/Mot de passe incorect</div>
    {% elseif state == 'success' %}
    <div class="alert alert-success span4 offset4">Identification r√©ussie</div>
    {% elseif state == 'noData' %}
    <div class="alert alert-error span4 offset4">Vous devez renseigner tous les champs</div>
    {% else %}
    <div class="alert alert-error span4 offset4">{{ state }}</div>
    {% endif %}
  {% endif %}
  <div class="span8 offset2">            
    <form class="well form-inline" method="POST" action="login">
      <input type="text" name="email" class="input" placeholder="Email">
      <input type="password" name="password" class="input" placeholder="Mot de Passe">
      <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
  </div>
  <div class="span8 offset2">
      <a href="{{ site_root }}/signin">Inscription &raquo;</a>
  </div>
</div>
{% endblock %}

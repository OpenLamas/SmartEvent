<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>SmartEvent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <!-- CSS -->
    <link href="{{ site_root }}/css/bootstrap.css" rel="stylesheet">
    <link href="{{ site_root }}/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="{{ site_root }}/css/jquery-ui.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ site_root }}/css/style.css">
    <!-- HTML5 shim -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      </style>
    <![endif]-->
    <!-- Favicons -->
    <link rel="shortcut icon" href="{{ site_root }}/img/favicon.ico">
    {% block redirection %}
    {% endblock %}
  </head>
  <body>
  <!-- Navbar -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <!-- collapse pour la vue mobile -->
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <ul class="nav nav-collapse">
            <li><a href="{{ site_root }}"><i class="icon-home icon-white"></i> Vue globale</a></li>
            {% if cur_user.right is defined %}
            {% if cur_user.right == "gestionnaire" or cur_user.right == "admin" %}
            <li><a href="{{ site_root }}/events-manage"><i class="icon-calendar icon-white"></i> Gestion des évènements</a></li>
            {% endif %}
            {% if cur_user.right == "admin" %}
            <li class="dropdown" id="menuAdmin">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#menuAdmin"><i class="icon-list-alt icon-white"></i> Administration <b class="caret"></b></a>
              <ul class="dropdown-menu">                
                <li><a href="{{ site_root }}/users-manage"><i class="icon-user"></i> Utilisateurs</a></li>
                <li><a href="{{ site_root }}/admin-config"><i class="icon-cog"></i> Configuration</a></li>
              </ul>
            </li>
            {% endif %}
            {% endif %}            
          </ul>
          <ul class="nav pull-right nav-collapse">
            {% if cur_user.login|length > 0 %}
            <li><a href="{{ site_root }}/disconnect"><i class="icon-off icon-white"></i> {{ [cur_user.firstname,cur_user.lastname]|join(' ') }}</a></li>
            {% endif %}
            <li><a href="#"><i class="icon-question-sign icon-white"></i> Aide</a></li>
          </ul>
        </div>
      </div>
    </div>
{% block body %}{% endblock %}
    <hr>
    <footer>
      <p>&nbsp;&copy; 2012 - <a href="https://github.com/sikado/SmartEvent">Retrouvez-nous sur GitHub</a></p>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="{{ site_root }}/js/bootstrap.min.js"></script>
    <script src="{{ site_root }}/js/jquery-ui.min.js"></script>
    <script src="{{ site_root }}/js/inscription.js"></script>
    <script src="{{ site_root }}/js/gestion-utilisateur.js"></script>
    <script src="{{ site_root }}/js/gestion-event.js"></script>
    <script type="text/javascript">
      $('.dropdown-toggle').dropdown();
    </script>
  </body>
</html>
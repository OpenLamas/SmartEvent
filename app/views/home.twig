{% set cur_page = 'home' %}
{% extends 'body.twig' %}
{% block content %}
<div class="hero-unit">
  <h1>Bienvenue,</h1>
  <p>Actuellement vous êtes inscrit à {{ totalRegisteredCount }} évènements.</p>
  <a class="btn btn-info btn-large" href="#">Comment ça marche ?</a><br /><br />
  <form class="well form-inline span11" id="home-search"><input class="input-xxxlarge" type="text" placeholder="Réseaux, Wi-Fi, Informatique, RT1,...">&nbsp;&nbsp;<a href="#" class="btn btn-primary btn-large">Rechercher des évènements &raquo;</a> </form>
</div>
<div class="row">
  <div class="span6">
    <h2>Sessions</h2>
    <ul class="unstyled">
      {% for session in sessions %}
      <li><a href="#">{{ session.name }} (xx / {{ session.nbMinParticipationEvenement }}) &raquo;</a></li>
      {% endfor %}
    </ul>
  </div>
  <div class="span6">
    <h2>Prochains évenements</h2>
    <ul class="unstyled">
      {# Faire un for sur la liste des évenements auxquels un utilisateur est inscrit #}
      <li><a href="#">...</a></li>
    </ul>
  </div>
</div> 
{% endblock %}

{% set cur_page = 'home' %}
{% extends 'body.twig' %}
{% block content %}
<div class="hero-unit">
  <h1>Bienvenue,</h1>
  <p>Actuellement vous êtes inscrit à {{ totalRegisteredCount }} évènements.</p>
  <a class="btn btn-info btn-large" href="#">Comment ça marche ?</a><br /><br />
  <form class="well form-inline span11" id="home-search"><input class="input-xxxlarge" type="text" placeholder="Réseaux, Wi-Fi, Informatique, RT1,..."><a href="#" id="btn-home-search" class="btn btn-primary btn-large">Rechercher des évènements &raquo;</a> </form>
</div>
<div class="row">
  <div class="span6">
    <h2>Sessions</h2>
    <ul class="unstyled">
      {% if sessions|length > 0 %}
      {% for session in sessions %}
      <li><a href="{{ site_root }}/session-{{ session.idsession }}-list">{{ session.nomsession }} ({{ session.eventInscrit }} / {{ session.nbminparticipationevenement }}) &raquo;</a></li>
      {% endfor %}
      {% else %}
      <li>Aucune session.</li>
      {% endif %}  
    </ul>
  </div>
  <div class="span6">
    <h2>Prochains évènements</h2>
    <ul class="unstyled">
      {% if lastevent|length > 0 %}
      {% for levent in lastevent %}
      <li><a href="#">{{ levent.datedebutevenement|truncate(11,true)|date("d M") }} - {{ levent.nomevenement }}</a></li>
      {% endfor %}
      <li><a href="{{ site_root }}/next-events">Voir tout &raquo;</a></li>      
      {% else %}
      <li>Vous n'êtes inscrit à aucun évènement.</li>
      {% endif %}
    </ul>
  </div>
</div> 
{% endblock %}

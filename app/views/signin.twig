{% extends 'body.twig' %}
    
{% block content %}
<div class="row">
  {% if state == 'ok' %}
  <div class="span4 offset4 alert alert-success">
    <h1>Inscription réussie :)</h1>
    <h4>Veuillez vérifier vos emails.</h4>
  </div>
  {% elseif state == 'erreur' %}
  <div class="span2 offset5 alert alert-error">
    <h1>Erreur :(</h1>
  </div>
  {% else %}
  {% if state == 'erreurPass' %}
  <div class="span6 offset2 alert alert-error">
    <h1>Les mots de passe ne sont pas identiques</h1>
  </div>
  {% endif %}
  {% if state == 'noData' %}
  <div class="span6 offset2 alert alert-error">
    <h1>Vous devez remplir tout les champs</h1>
  </div>
  {% endif %}
  <div class="span7 offset2">
    <form id="signinform" class="well form-horizontal" method="POST" action="signin">
      <fieldset>
        <legend>Inscription</legend>
        
        <div id="ctrlNom" class="control-group">
          <label class="control-label" for="inputNom">Nom</label>
          <div class="controls">
            <input type="text" class="input-large" name="nomUtilisateur" id="inputNom">          
          </div>
        </div>
        <div id="ctrlPrenom" class="control-group">
          <label class="control-label" for="inputPrenom">Prenom</label>
          <div class="controls">
            <input type="text" class="input-large" name="prenomUtilisateur" id="inputPrenom">
          </div>
        </div>
        <div id="ctrlEmail" class="control-group">
          <label class="control-label" for="inputEmail">Email</label>
          <div class="controls">
            <input type="text" class="input-large" name="mailUtilisateur" id="inputEmail">
          </div>
        </div>
        <div id="ctrlPassword" class="control-group">
          <label class="control-label" for="inputPassword">Mot de passe</label>
          <div class="controls">
            <input type="password" name="mdpUtilisateur" id="inputPassword" class="input-large">
          </div>
        </div>      
        <div id="ctrlPassword2" class="control-group">
          <label class="control-label" for="inputPassword2">Confirmer le mot de passe</label>
          <div class="controls">
            <input type="password" name="mdpUtilisateur2" id="inputPassword2" class="input-large">
          </div>
        </div>    
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">S'inscrire</button>
        </div>
        
      </fieldset>
    </form>
  </div>
  {% endif %}  
</div>
{% endblock %}